{
  "extends": ["eslint:recommended", "google"],
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "no-var": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "comma-dangle": ["error", "never"]
  },
  "globals": {
    "Polymer": true
  }
}
